<Window x:Class="MovieNetWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieNetWpf"
        mc:Ignorable="d"
		DataContext="{Binding Source={StaticResource VMLocator}, Path=MainVM}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Label Name="Label1" Content="{Binding Name}" HorizontalAlignment="Left" Height="29" Margin="53,70,0,0" VerticalAlignment="Top" Width="188" FontFamily="Arial"/>
		<Button Name="Button1" Command="{Binding MyCommand}" Content="Click Here" HorizontalAlignment="Left" Height="25" Margin="212,124,0,0" VerticalAlignment="Top" Width="71" />

	</Grid>
</Window>
